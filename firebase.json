{
  "hosting": {
    "public": "dist",
    "ignore": ["firebase.json", "**/.*", "**/node_modules/**"],
    "rewrites": [
      {
        "source": "**",
        "destination": "/index.html"
      }
    ]
  },
  "emulators": {
    "firestore": {
      "host": "localhost",
      "port": 8080
    },
    "auth": {
      "port": 9090
    },
    "function": {
      "port": 5000
    }
  }
}
